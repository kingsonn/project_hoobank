{
    "version": 2,
    "rewrites": [{"source":"/(.*)","destination":"/"}],
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/dist"
        }
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)", 
        "dest": "frontend/dist/index.html" 
      },
      {
        "src": "/api/(.*)", 
        "dest": "backend/server.js" 
      }
    ]
  }