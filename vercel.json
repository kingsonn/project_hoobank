{
    "version": 2,
    "builds": [
      {
        "src": "/package.json",
        "use": "@vercel/vite",
        "config": {
          "distDir": "/build"
        }
      },
      {
        "src": "./backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)", 
        "dest": "/build/index.html" 
      },
      {
        "src": "/api/(.*)", 
        "dest": "./backend/server.js" 
      }
    ]
  }